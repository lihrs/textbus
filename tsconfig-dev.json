{
  "compilerOptions": {
    "target": "es6",
    "module": "esnext",
    "strict": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "useDefineForClassFields": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "lib": ["esnext", "dom"],
    "noImplicitAny": false,
    "suppressImplicitAnyIndexErrors": true,
    "downlevelIteration": true,
    "esModuleInterop": true,
    "noImplicitOverride": true,
    "baseUrl": "./",
    "paths": {
      "@textbus/platform-browser": ["./packages/platform-browser/src/public-api.ts"],
      "@textbus/core": ["./packages/core/src/public-api.ts"],
      "@textbus/editor": ["./packages/editor/src/public-api.ts"],
      "@textbus/collaborate": ["./packages/collaborate/src/public-api.ts"],
      "@textbus/adapter-viewfly": ["./packages/adapter-viewfly/src/public-api.ts"],
      "@textbus/adapter-react": ["./packages/adapter-react/src/public-api.ts"]
    },
    "jsx": "react-jsx"
  },
  "exclude": ["packages", "_docs", "helper", "test"]
}
