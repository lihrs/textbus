{
  "compilerOptions": {
    "declaration": true,
    "target": "es6",
    "module": "esnext",
    "strict": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "useDefineForClassFields": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "lib": [
      "esnext",
      "dom"
    ],
    "resolveJsonModule": true,
    "noImplicitAny": false,
    "downlevelIteration": true,
    "esModuleInterop": true,
    "noImplicitOverride": true,
    "baseUrl": "./",
    "jsx": "react-jsx",
    "jsxImportSource": "@viewfly/core",
    "paths": {
      "@textbus/platform-browser": ["../../packages/platform-browser/src/public-api.ts"],
      "@textbus/platform-node": ["../../packages/platform-node/src/public-api.ts"],
      "@textbus/core": ["../../packages/core/src/public-api.ts"],
      "@textbus/collaborate": ["../../packages/collaborate/src/public-api.ts"],
      "@textbus/adapter-viewfly": ["../../packages/adapter-viewfly/src/public-api.ts"]
    }
  },
  "include": ["src", "./types.d.ts"]
}
